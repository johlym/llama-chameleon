<p id="notice"><%= notice %></p>



<p style="float:right;">
  <%= link_to "Email Me This Post", new_email_path(post_id: @post.id) %>
</p>

<article>
  <h1><%= @post.title %></h1>

  <%= simple_format @post.body %>
</article>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
  <img src="/assets/mystery-man.jpg" />
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>

<% @post.comments.each do |comment| %>

<p>
  <strong><%= comment.name %></strong>
  <br />
  <%= comment.body %>

</p>


<% end %>